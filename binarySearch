#include <stdio.h>
int binarySearch(int roll[], int left, int right, int key) {
if (left <= right) {
int mid = left + (right - left) / 2;
if (roll[mid] == key)
return mid;
if (key < roll[mid])
return binarySearch(roll, left, mid - 1, key);
else
return binarySearch(roll, mid + 1, right, key);
}
return -1; // Not found
}
int main() {
int roll[100];
int n, i, key, result;
printf("Enter the number of students: ");
scanf("%d", &n);
printf("Enter %d roll numbers in ascending order:\n", n);
for (i = 0; i < n; i++) {
printf("Roll number %d: ", i + 1);
scanf("%d", &roll[i]);
}
printf("Enter the roll number to search: ");
scanf("%d", &key);
result = binarySearch(roll, 0, n - 1, key);
if (result != -1)
printf("Roll number %d found at position %d (index %d).\n", key, result + 1, result);
else
printf("Roll number %d not found in the list.\n", key);
return 0;
}
